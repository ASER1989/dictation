.dropdown
  position relative
  width 100%
  text-align left
  font-size 14px
  --dropdown-color: #333
  --dropdown-bgcolor: #fff
  --padding-top-size 6px
  --dropdown-triangle-size 8px
  --dropdown-line-color #777777
  height 30px
  border solid 1px var(--dropdown-line-color)
  border-radius: 3px
  position relative

  &.small
    --padding-top-size 3px
    height 24px

  &.tiny
    height 20px
    --padding-top-size 0
    --dropdown-triangle-size 6px

  &:after
    content ''
    position absolute
    right 10px
    top 50%
    margin-top -6px
    height var(--dropdown-triangle-size)
    width var(--dropdown-triangle-size)
    border solid 2px var(--dropdown-line-color)
    transform rotateZ(45deg)
    border-left 0
    border-top 0
    border-radius 1px
    transition transform 3s
    transform-origin 60% 60%

  &.placeholder
    color #797979

  &.expand::after
    transform rotateZ(225deg)

  input
    box-sizing border-box
    position absolute
    right 30px
    left 0
    top 0
    bottom 0
    border 0
    background transparent
    outline 0
    padding-left 5px

  .dropdown-toggle
    background-color transparent
    padding var(--padding-top-size) 6px
    width 100%
    cursor pointer
    text-align left
    outline 0
    color inherit
    position relative
    z-index 1
    overflow hidden
    height 100%
    text-overflow ellipsis

  .dropdown-menu
    position absolute
    top 100%
    left 0
    width 100%
    margin-top 10px
    background-color var(--dropdown-bgcolor)
    border 1px solid #ccc
    padding 0
    list-style none
    display flex
    flex-direction column
    z-index 1
    &.top
        top auto
        bottom: 100%
        margin-bottom: 10px

  .dropdown-menu li
    padding 5px 10px
    cursor pointer
    border-bottom solid 1px #e0e0e0
    color var(--dropdown-color)

    &:last-child
      border 0

    &:hover,&.hover
      background-color #f1f1f1

