.button
  --btn-bg-color #e9e9e9
  --btn-color #777777
  display flex
  align-items center
  padding 3px 15px
  justify-content center
  border-radius 5px
  box-shadow 1px 1px 5px 1px #c0c0c0
  box-sizing border-box
  cursor pointer
  user-select none
  border solid 1px var(--btn-bg-color)
  background var(--btn-bg-color)
  color var(--btn-color)
  font-size 14px
  gap 5px

  &:active
    box-shadow 1px 1px 15px 1px #d0d0d0 inset

  &.primary
    --btn-bg-color #007ac1
    --btn-color #FFFFFF
    text-shadow 0px 0px 20px #fffbfb

  &.disabeld
    --btn-color #beb9b9
    cursor not-allowed

    &:active
      box-shadow 1px 1px 5px 1px #c0c0c0