.component-side-page
  &.mask
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    z-index 998
    background rgba(0, 0, 0, 0.2)
    transition background .3s

    &.hide
      background transparent

  &.side-pane
    --side-pane-width 50%
    position absolute
    z-index 999
    width var(--side-pane-width)
    height 100%
    top 0
    right 0
    background #FFFFFF
    transition transform .3s
    display flex
    flex-direction column

    &:before
      content ''
      position absolute
      height 100%
      left 0
      top 0
      width 1px
      box-shadow: 0 0 5px 1px #111, 0 0 7px 1px #333, -7px 0 7px 0 #666;
      z-index -1

    &:after
      content ''
      position absolute
      height 100%
      left 1px
      top 0
      width 10px
      background #FFFFFF
      z-index -1

    &.hide
      transform translateX(100%)

    .side-pane-title
      display flex
      justify-content space-between
      height 35px
      align-items center
      padding 0 10px
      border-bottom solid 1px #c0c0c0
      position relative
      z-index 1

      .pane-title-operation
        cursor pointer

        &:hover
          color #FFFFFF
          filter drop-shadow(0px 0px 1px black)

    .side-pane-content
      flex 1
      align-self stretch
      overflow hidden